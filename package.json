{
  "name": "tgbotlib",
  "author": "RedHolms",
  "description": "SDK to build Telegram bots",
  "license": "Free to use, edit and distribute ",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/redholms/node-tgbotlib.git"
  },
  "keywords": [
    "tg",
    "telegram",
    "bot",
    "bots"
  ],
  "main": "dist/index.js",
  "types": "./types/index.d.ts",
  "typings": "./types/index.d.ts",
  "exports": {
    ".": {
      "types": {
        "default": "./types/index.d.ts"
      },
      "default": {
        "default": "./dist/index.js"
      }
    }
  },
  "scripts": {
    "build": "tsx ./scripts/build.ts && tsc",
    "watch": "concurrently --kill-others -p none \"tsx ./scripts/build.ts -w\" \"tsc --watch -w --pretty\"",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "npm run lint && npm run type-check && npm run build",
    "lint": "eslint"
  },
  "dependencies": {
    "axios": "^1.7.7",
    "log4js": "^6.9.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@types/node": "^22.8.2",
    "concurrently": "^9.1.2",
    "esbuild": "^0.24.2",
    "eslint": "^9.13.0",
    "eslint-plugin-import": "^2.31.0",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.12.2"
  },
  "files": [
    "src",
    "dist",
    "types"
  ]
}
