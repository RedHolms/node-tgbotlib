{
  "compilerOptions": {
    "lib": ["esnext"],
    "target": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "alwaysStrict": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      ".../*": ["./src/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}